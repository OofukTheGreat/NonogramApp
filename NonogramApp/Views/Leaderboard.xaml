<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="NonogramApp.Views.Leaderboard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:NonogramApp.Models"
    xmlns:ViewModel="clr-namespace:NonogramApp.ViewModels"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="False"
    HorizontalOptions="Center"
    Size="270,580"
    VerticalOptions="Center"
    Color="Gray">
    <Grid
        ColumnDefinitions="*"
        HorizontalOptions="Fill"
        RowDefinitions="*"
        VerticalOptions="Fill">
        <Image
            Grid.Row="0"
            Grid.Column="0"
            Margin="2"
            HorizontalOptions="Fill"
            Source="pixelbg.png"
            VerticalOptions="Fill" />
        <VerticalStackLayout Grid.Row="0" Grid.Column="0">
            <Border
                Grid.Column="0"
                Margin="3,7,3,3"
                BackgroundColor="Black"
                MaximumWidthRequest="200"
                Stroke="Gray"
                StrokeShape="RoundRectangle 5,5,5,5"
                StrokeThickness="3"
                WidthRequest="100">
                <Label
                    Margin="2,3,2,0"
                    FontSize="20"
                    HorizontalOptions="CenterAndExpand"
                    HorizontalTextAlignment="End"
                    Text="{Binding Level.Title}"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
            </Border>
            <Grid ColumnDefinitions="*" RowDefinitions="*">
                <Border
                    HeightRequest="160"
                    StrokeShape="RoundRectangle 5,5,5,5"
                    StrokeThickness="0"
                    WidthRequest="160">
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        HeightRequest="160"
                        IsAnimationPlaying="True"
                        Source="rainbowborder.gif"
                        WidthRequest="160" />
                </Border>
                <Grid
                    Grid.Row="0"
                    Grid.Column="0"
                    Padding="-1"
                    BindableLayout.ItemsSource="{Binding Tiles}"
                    ColumnDefinitions="{Binding Columns}"
                    HeightRequest="147"
                    RowDefinitions="{Binding Rows}"
                    WidthRequest="147">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="Models:Tile">
                            <Border
                                Grid.Row="{Binding Y}"
                                Grid.Column="{Binding X}"
                                Margin="-1"
                                BackgroundColor="{Binding TrueColor}"
                                StrokeThickness="0" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </Grid>
            </Grid>
            <Label
                Margin="3,7,3,-10"
                BackgroundColor="Black"
                FontSize="20"
                HorizontalTextAlignment="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span
                            FontFamily="Font"
                            Text="Congratulations! You beat the level in "
                            TextColor="White" />
                        <Span
                            FontFamily="Font"
                            Text="{Binding Hours}"
                            TextColor="White" />
                        <Span
                            FontFamily="Font"
                            Text=":"
                            TextColor="White" />
                        <Span
                            FontFamily="Font"
                            Text="{Binding Minutes, StringFormat='{0:D2}'}"
                            TextColor="White" />
                        <Span
                            FontFamily="Font"
                            Text=":"
                            TextColor="White" />
                        <Span
                            FontFamily="Font"
                            Text="{Binding Seconds, StringFormat='{0:D2}'}"
                            TextColor="White" />
                        <Span
                            FontFamily="Font"
                            Text="!"
                            TextColor="White" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <CollectionView
                Grid.Row="1"
                Margin="0,10,0,0"
                ItemsLayout="VerticalList"
                ItemsSource="{Binding Scores}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border
                            Margin="20,2,20,0"
                            BackgroundColor="Black"
                            StrokeShape="RoundRectangle 5,5,5,5"
                            StrokeThickness="1">
                            <Grid
                                Padding="0"
                                ColumnDefinitions="*,*,*,*"
                                RowDefinitions="*"
                                VerticalOptions="Start">
                                <Label
                                    Margin="0,7,0,0"
                                    FontSize="30"
                                    HorizontalOptions="Center"
                                    Text="{Binding Score.PlayerId}"
                                    TextColor="White"
                                    VerticalOptions="Center" />
                                <Border
                                    Grid.Column="1"
                                    Margin="0,2,0,2"
                                    HeightRequest="46"
                                    StrokeShape="Ellipse"
                                    StrokeThickness="1"
                                    WidthRequest="46">
                                    <Image HeightRequest="50" Source="{Binding URL}" />
                                </Border>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    HorizontalOptions="Center"
                                    Text="{Binding Name}"
                                    TextColor="White"
                                    VerticalOptions="Center" />
                                <Label
                                    Grid.Column="3"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span
                                                FontFamily="Font"
                                                Text="{Binding Score.Hours}"
                                                TextColor="White" />
                                            <Span
                                                FontFamily="Font"
                                                Text=":"
                                                TextColor="White" />
                                            <Span
                                                FontFamily="Font"
                                                Text="{Binding Score.Minutes, StringFormat='{0:D2}'}"
                                                TextColor="White" />
                                            <Span
                                                FontFamily="Font"
                                                Text=":"
                                                TextColor="White" />
                                            <Span
                                                FontFamily="Font"
                                                Text="{Binding Score.Seconds, StringFormat='{0:D2}'}"
                                                TextColor="White" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
        <Button
            Margin="0,0,0,10"
            Padding="-5"
            BackgroundColor="Black"
            BorderColor="Gray"
            BorderWidth="2"
            Clicked="ClosePopup"
            FontSize="15"
            HeightRequest="35"
            Text="Return to Level Select"
            TextColor="White"
            VerticalOptions="End"
            WidthRequest="180" />
    </Grid>
</toolkit:Popup>
