<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="NonogramApp.Views.Leaderboard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:NonogramApp.Models"
    xmlns:ViewModel="clr-namespace:NonogramApp.ViewModels"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    CanBeDismissedByTappingOutsideOfPopup="True"
    HorizontalOptions="Center"
    Size="270,580"
    VerticalOptions="Center"
    Color="Gray">
    <Grid
        ColumnDefinitions="*"
        HorizontalOptions="Fill"
        RowDefinitions="*"
        VerticalOptions="Fill">
        <Image
            Grid.Row="0"
            Grid.Column="0"
            Margin="2"
            HorizontalOptions="Fill"
            Source="pixelbg.png"
            VerticalOptions="Fill" />
        <VerticalStackLayout Grid.Row="0" Grid.Column="0">
            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Congratulations! You beat level &quot;" TextColor="White" />
                        <Span Text="{Binding Level.Title}" TextColor="White" />
                        <Span Text="&quot; in " TextColor="White" />
                        <Span
                            FontAttributes="Bold"
                            Text="{Binding Hours}"
                            TextColor="White" />
                        <Span
                            FontAttributes="Bold"
                            Text=":"
                            TextColor="White" />
                        <Span
                            FontAttributes="Bold"
                            Text="{Binding Minutes, StringFormat='{0:D2}'}"
                            TextColor="White" />
                        <Span
                            FontAttributes="Bold"
                            Text=":"
                            TextColor="White" />
                        <Span
                            FontAttributes="Bold"
                            Text="{Binding Seconds, StringFormat='{0:D2}'}"
                            TextColor="White" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
            <Grid ColumnDefinitions="*" RowDefinitions="*">
                <Border
                    HeightRequest="160"
                    StrokeShape="RoundRectangle 5,5,5,5"
                    StrokeThickness="0"
                    WidthRequest="160">
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        HeightRequest="160"
                        IsAnimationPlaying="True"
                        Source="rainbowborder.gif"
                        WidthRequest="160" />
                </Border>
                <Grid
                    Grid.Row="0"
                    Grid.Column="0"
                    Padding="-1"
                    BindableLayout.ItemsSource="{Binding Tiles}"
                    ColumnDefinitions="{Binding Columns}"
                    HeightRequest="147"
                    RowDefinitions="{Binding Rows}"
                    WidthRequest="147">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate x:DataType="Models:Tile">
                            <Border
                                Grid.Row="{Binding Y}"
                                Grid.Column="{Binding X}"
                                Margin="-1"
                                BackgroundColor="{Binding TrueColor}"
                                StrokeThickness="0" />
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </Grid>
            </Grid>
            <CollectionView
                Grid.Row="1"
                ItemsLayout="VerticalList"
                ItemsSource="{Binding Scores}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="20,0,20,0">
                            <Grid
                                Padding="0"
                                ColumnDefinitions="*,*,*"
                                HorizontalOptions="FillAndExpand"
                                RowDefinitions="*"
                                VerticalOptions="Start">
                                <Image
                                    Grid.Column="0"
                                    Source="pfp.png"
                                    WidthRequest="50" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    Text="{Binding Name}"
                                    TextColor="White" />
                                <Label Grid.Row="1" Grid.Column="1">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Joined in: " TextColor="White" />
                                            <Span Text="{Binding Email}" TextColor="White" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Grid.Row="2" Grid.Column="1">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Contact information: " TextColor="White" />
                                            <Span Text="{Binding Email}" TextColor="White" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Label Grid.Row="3" Grid.Column="1">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Has " TextColor="White" />
                                            <Span Text="{Binding RecipeAmout}" TextColor="White" />
                                            <Span Text=" Recipes" TextColor="White" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </Grid>
</toolkit:Popup>
