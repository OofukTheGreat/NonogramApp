<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NonogramApp.Views.LevelSelectPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Models="clr-namespace:NonogramApp.Models"
    xmlns:viewmodels="clr-namespace:NonogramApp.ViewModels"
    Title="LevelSelectPage"
    x:DataType="viewmodels:LevelSelectViewModel"
    BackgroundImageSource="pixelbg.png"
    Shell.NavBarIsVisible="False">
    <VerticalStackLayout>
        <Grid BackgroundColor="Black">
            <HorizontalStackLayout>
                <CheckBox
                    HeightRequest="50"
                    HorizontalOptions="Start"
                    IsChecked="{Binding FilterUnplayed}"
                    WidthRequest="50"
                    Color="#a9a9a9" />
                <Label
                    Margin="0,10,10,10"
                    FontSize="15"
                    Text="Show only unplayed levels"
                    TextColor="White"
                    VerticalOptions="Center"
                    WidthRequest="100" />
            </HorizontalStackLayout>
            <HorizontalStackLayout HorizontalOptions="End">
                <Label
                    Margin="0,8,8,0"
                    FontSize="20"
                    Text="Filter by size:"
                    TextColor="White"
                    VerticalOptions="Center" />
                <Border
                    Margin="0,8,8,0"
                    BackgroundColor="#a9a9a9"
                    HeightRequest="28"
                    HorizontalOptions="Center"
                    StrokeShape="RoundRectangle 5,5,5,5"
                    VerticalOptions="Center">
                    <Picker
                        Title="Size"
                        Margin="0,7,0,0"
                        FontSize="20"
                        HeightRequest="50"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        ItemsSource="{Binding SizeFilters}"
                        SelectedItem="{Binding SelectedSize}"
                        TextColor="White"
                        TitleColor="White"
                        VerticalOptions="Center"
                        WidthRequest="70" />
                </Border>
            </HorizontalStackLayout>
        </Grid>
        <ScrollView>

            <CollectionView
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Margin="3"
                ItemsSource="{Binding FilteredLevels}"
                SelectedItem="{Binding SelectedLevel}"
                SelectionMode="Single">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="Models:LevelWithScores">
                        <Border
                            Background="Black"
                            Margin="4,1"
                            Padding="4"
                            StrokeShape="RoundRectangle 5,5,5,5"
                            HeightRequest="112">
                            <Grid ColumnDefinitions="100,*,*,*">
                                <Border Stroke="Gray" StrokeThickness="1" Grid.Column="0" HeightRequest="102" WidthRequest="102" Margin="4,2,2,2">
                                    <Grid
                                        Padding="-1"
                                        BindableLayout.ItemsSource="{Binding Tiles}"
                                        ColumnDefinitions="{Binding Columns}"
                                        HeightRequest="100"
                                        RowDefinitions="{Binding Rows}"
                                        WidthRequest="100">
                                        <BindableLayout.ItemTemplate>
                                            <DataTemplate x:DataType="Models:Tile">
                                                <Border
                                                Grid.Row="{Binding Y}"
                                                Grid.Column="{Binding X}"
                                                Margin="-1"
                                                BackgroundColor="{Binding TrueColor}"
                                                StrokeThickness="0" />
                                            </DataTemplate>
                                        </BindableLayout.ItemTemplate>
                                    </Grid>
                                </Border>
                                <BoxView 
                                    Grid.Column="1"
                                    WidthRequest="1"
                                    HeightRequest="114"
                                    Color="White"
                                    Margin="5,0,0,0"
                                    HorizontalOptions="Start"/>
                                <Label
                                    Grid.Column="1"
                                    Margin="3"
                                    HorizontalOptions="Center"
                                    VerticalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span
                                                FontAttributes="Bold"
                                                Text="&quot;"
                                                TextColor="White" />
                                            <Span
                                                FontAttributes="Bold"
                                                Text="{Binding Level.Title}"
                                                TextColor="White" />
                                            <Span
                                                FontAttributes="Bold"
                                                Text="&quot;"
                                                TextColor="White" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <BoxView 
                                    Grid.Column="1"
                                    WidthRequest="1"
                                    HeightRequest="114"
                                    Color="White"
                                    HorizontalOptions="End"/>
                                <Grid RowDefinitions="*,*" Grid.Column="2">
                                    <Label Grid.Row="0" Text="{Binding HighScore}" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                                    <Label Grid.Row="1" Text="{Binding CurrentScore}" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
                                </Grid>
                                <BoxView 
                                    Grid.Column="2"
                                    WidthRequest="1"
                                    HeightRequest="114"
                                    Color="White"
                                    HorizontalOptions="End"/>
                                <Label
                                    Grid.Column="3"
                                    Margin="3"
                                    HorizontalOptions="Center"
                                    VerticalTextAlignment="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span
                                                FontAttributes="Bold"
                                                Text="{Binding Level.Size}"
                                                TextColor="AliceBlue" />
                                            <Span
                                                FontAttributes="Bold"
                                                Text="x"
                                                TextColor="AliceBlue" />
                                            <Span
                                                FontAttributes="Bold"
                                                Text="{Binding Level.Size}"
                                                TextColor="AliceBlue" />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                            </Grid>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup>
                                    <VisualState Name="Selected">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="Transparent" />
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState Name="Normal">
                                        <VisualState.Setters>
                                            <Setter Property="BackgroundColor" Value="Transparent" />
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
        <ActivityIndicator IsEnabled="{Binding NotInServerCall}" />
    </VerticalStackLayout>
</ContentPage>