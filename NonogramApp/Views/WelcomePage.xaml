<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NonogramApp.Views.WelcomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="WelcomePage"
    BackgroundImageSource="homepagepixelbg.png"
    NavigationPage.HasNavigationBar="False">
    <Grid RowDefinitions="12*,3*,3.5*,4*">
        <Button
            Grid.Row="1"
            Margin="10"
            BackgroundColor="Transparent"
            BorderWidth="5"
            Command="{Binding LoginCommand}"
            CornerRadius="5"
            HeightRequest="101"
            VerticalOptions="EndAndExpand"
            WidthRequest="286" />
        <Button
            Grid.Row="2"
            Margin="10"
            BackgroundColor="Transparent"
            BorderWidth="5"
            Command="{Binding SignupCommand}"
            CornerRadius="0"
            HeightRequest="101"
            VerticalOptions="EndAndExpand"
            WidthRequest="286" />
    </Grid>
</ContentPage>
